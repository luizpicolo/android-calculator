<?xml version="1.0" encoding="UTF-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    android:padding="1dp"
    android:stretchColumns="20" >

    <!-- Linha 0 -->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <EditText
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_span="8"
            android:layout_weight="1"
            android:gravity="right|center"
            android:background="@color/BackgroundColor"
            android:textSize="@dimen/ViewedTextSize2"
            android:inputType="text" />
        
        
    </TableRow>

    <!-- Linha 1 -->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <EditText
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_span="8"
            android:layout_weight="1"
            android:gravity="right|center"
            android:background="@color/BackgroundColor"
            android:textSize="@dimen/ViewedTextSize2"
            android:inputType="text" />
        
        
    </TableRow>

    <!-- Linha 2 -->

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/exponencialButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ButtonSizeLand"
            android:layout_span="1"
            android:layout_weight="1"
			android:layout_margin="@dimen/ButtonMargin"
            android:background="@color/ButtonColor2"
            android:text="@string/exponent"
            android:textColor="@color/ColorText2"
            android:textSize="@dimen/TextSize" />

        <Button
            android:id="@+id/porcentagemButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor2"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:textColor="@color/ColorText2"
            android:text="@string/porcent" />

        <Button
            android:id="@+id/divisaoButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor2"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:textColor="@color/ColorText2"
            android:text="@string/div" />
        
        <Button
            android:id="@+id/multiplicacaoButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor2"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:textColor="@color/ColorText2"
            android:text="@string/mul" />
        
        <Button
            android:id="@+id/zerarButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor2"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:textColor="@color/ColorText2"
            android:text="@string/Clear" />
        
        <Button
            android:id="@+id/limparButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor2"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:textColor="@color/ColorText2"
            android:text="@string/ce" />

    </TableRow>

    <!-- Linha 3 -->

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/seteButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ButtonSizeLand"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:text="@string/B7" />

        <Button
            android:id="@+id/oitoButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:text="@string/B8" />

        <Button
            android:id="@+id/noveButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:text="@string/B9" />

        <Button
            android:id="@+id/subtracaoButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor2"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:textColor="@color/ColorText2"
            android:text="@string/dif" />
        
    </TableRow>

    <!-- Linha 4 -->

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/quatroButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ButtonSizeLand"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:text="@string/B4" />

        <Button
            android:id="@+id/cincoButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:text="@string/B5" />

        <Button
            android:id="@+id/seisButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:text="@string/B6" />
        
        <Button
            android:id="@+id/adicaoButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor2"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:textColor="@color/ColorText2"
            android:text="@string/sum" />

        
    </TableRow>

    <!-- Linha 5 -->

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/umButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ButtonSizeLand"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:text="@string/B1" />

        <Button
            android:id="@+id/doisButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:text="@string/B2" />

        <Button
            android:id="@+id/tresButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:text="@string/B3" />
        
        <Button
            android:id="@+id/positivo_negativoButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor2"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:textColor="@color/ColorText2"
            android:text="@string/maisoumenos" />

        
    </TableRow>

    <!-- Linha 6 -->

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/zeroButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ButtonSizeLand"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:text="@string/B0" />

        <Button
            android:id="@+id/pontoButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="1"
            android:background="@color/ButtonColor2"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:textColor="@color/ColorText2"
            android:text="@string/Dot" />  
            
        <Button
            android:id="@+id/resultadoButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:layout_weight="2"
            android:background="@color/ButtonColor2"
            android:layout_margin="@dimen/ButtonMargin"
            android:textSize="@dimen/TextSize"
            android:textColor="@color/ColorText2"
            android:text="@string/Eq" />
        
    </TableRow>

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </TableRow>

</TableLayout>

