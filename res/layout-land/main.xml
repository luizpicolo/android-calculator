<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    android:orientation="vertical"
    android:screenOrientation="portrait" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:ellipsize="start"
        android:gravity="right|center"
        android:padding="2dp"
        android:text="@string/Empty"
        android:background="@color/BackgroundColor"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/ViewedTextSize2land" />
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/BackgroundColor"
        android:ellipsize="start"
        android:gravity="right|center"
        android:padding="2dp"
        android:text="@string/Empty"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/ViewedTextSizeland" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" >

        <Button
            android:id="@+id/button7"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/ButtonMargin"
            android:layout_toLeftOf="@+id/button5"
            android:background="@color/ButtonColor"
            android:text="@string/B7"
            android:textSize="@dimen/TextSize" />

        <Button
            android:id="@+id/button8"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/ButtonMargin"
            android:layout_toRightOf="@+id/button7"
            android:background="@color/ButtonColor"
            android:text="@string/B8"
            android:textSize="@dimen/TextSize" />

        <Button
            android:id="@+id/button9"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:textSize="@dimen/TextSize"
            android:layout_alignParentTop="true"
            android:background="@color/ButtonColor"
            android:layout_toRightOf="@+id/button8"
            android:layout_margin="@dimen/ButtonMargin"
            android:text="@string/B9" />

        <Button
            android:id="@+id/button4"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:textSize="@dimen/TextSize"
            android:layout_alignParentLeft="true"
            android:background="@color/ButtonColor"
            android:layout_below="@+id/button7"
            android:layout_margin="@dimen/ButtonMargin"
            android:text="@string/B4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:textSize="@dimen/TextSize"
            android:layout_below="@+id/button8"
            android:background="@color/ButtonColor"
            android:layout_toRightOf="@+id/button4"
            android:layout_margin="@dimen/ButtonMargin"
            android:text="@string/B5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:textSize="@dimen/TextSize"
            android:layout_below="@+id/button9"
            android:background="@color/ButtonColor"
            android:layout_toRightOf="@+id/button5"
            android:layout_margin="@dimen/ButtonMargin"
            android:text="@string/B6" />

        <Button
            android:id="@+id/button1"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:textSize="@dimen/TextSize"
            android:layout_alignParentLeft="true"
            android:background="@color/ButtonColor"
            android:layout_below="@+id/button4"
            android:layout_margin="@dimen/ButtonMargin"
            android:text="@string/B1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:textSize="@dimen/TextSize"
            android:layout_below="@+id/button5"
            android:background="@color/ButtonColor"
            android:layout_toRightOf="@+id/button1"
            android:layout_margin="@dimen/ButtonMargin"
            android:text="@string/B2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:textSize="@dimen/TextSize"
            android:layout_below="@+id/button6"
            android:background="@color/ButtonColor"
            android:layout_toRightOf="@+id/button2"
            android:layout_margin="@dimen/ButtonMargin"
            android:text="@string/B3" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:textSize="@dimen/TextSize"
            android:layout_below="@+id/button2"
            android:background="@color/ButtonColor2"
            android:layout_toRightOf="@+id/button0"
            android:layout_margin="@dimen/ButtonMargin"
            android:textColor="@color/ColorText2"
            android:text="@string/Dot" />

        <Button
            android:id="@+id/button0"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:textSize="@dimen/TextSize"
            android:layout_alignParentLeft="true"
            android:background="@color/ButtonColor"
            android:layout_below="@+id/button1"
            android:layout_margin="@dimen/ButtonMargin"
            android:text="@string/B0" />

        <Button
            android:id="@+id/buttonSum"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:textSize="@dimen/TextSize"
            android:layout_below="@+id/buttonDif"
            android:background="@color/ButtonColor2"
            android:layout_toRightOf="@+id/buttonClear"
            android:layout_margin="@dimen/ButtonMargin"
            android:textColor="@color/ColorText2"
            android:text="@string/sum" />

        <Button
            android:id="@+id/buttonDif"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:textSize="@dimen/TextSize"
            android:layout_below="@+id/buttonMul"
            android:background="@color/ButtonColor2"
            android:layout_toRightOf="@+id/button3"
            android:layout_margin="@dimen/ButtonMargin"
            android:textColor="@color/ColorText2"
            android:text="@string/dif" />

        <Button
            android:id="@+id/buttonMul"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:textSize="@dimen/TextSize"
            android:layout_below="@+id/buttonDiv"
            android:background="@color/ButtonColor2"
            android:layout_toRightOf="@+id/button6"
            android:layout_margin="@dimen/ButtonMargin"
            android:textColor="@color/ColorText2"
            android:text="@string/mul" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:textSize="@dimen/TextSize"
            android:background="@color/ButtonColor2"
            android:layout_toRightOf="@+id/button9"
            android:layout_margin="@dimen/ButtonMargin"
            android:textColor="@color/ColorText2"
            android:text="@string/div" />

        <Button
            android:id="@+id/Button01"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:layout_above="@+id/buttonMul"
            android:layout_margin="@dimen/ButtonMargin"
            android:layout_toRightOf="@+id/buttonMul"
            android:background="@color/ButtonColor2"
            android:text="@string/exponent"
            android:textColor="@color/ColorText2"
            android:textSize="@dimen/TextSize" />

        <Button
            android:id="@+id/Button02"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:layout_below="@+id/buttonDiv"
            android:layout_margin="@dimen/ButtonMargin"
            android:layout_toRightOf="@+id/buttonMul"
            android:background="@color/ButtonColor2"
            android:text="@string/porcent"
            android:textColor="@color/ColorText2"
            android:textSize="@dimen/TextSize" />

        <Button
            android:id="@+id/Button03"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:layout_below="@+id/buttonMul"
            android:layout_margin="@dimen/ButtonMargin"
            android:layout_toRightOf="@+id/buttonDif"
            android:background="@color/ButtonColor2"
            android:text="@string/ce"
            android:textColor="@color/ColorText2"
            android:textSize="@dimen/TextSize" />
        
        <Button
            android:id="@+id/buttonClear"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:layout_below="@+id/button2"
            android:layout_margin="@dimen/ButtonMargin"
            android:layout_toLeftOf="@+id/buttonDif"
            android:layout_toRightOf="@+id/button2"
            android:background="@color/ButtonColor2"
            android:maxLines="1"
            android:text="@string/Clear"
            android:textColor="@color/ColorText2"
            android:textSize="@dimen/textBotaoLimpar" />

        <Button
            android:id="@+id/Button04"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:layout_above="@+id/buttonEq"
            android:layout_margin="@dimen/ButtonMargin"
            android:layout_toRightOf="@+id/buttonSum"
            android:background="@color/ButtonColor2"
            android:text="@string/maisoumenos"
            android:textColor="@color/ColorText2"
            android:textSize="@dimen/TextSize" />

        <Button
            android:id="@+id/buttonEq"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/ButtonMargin"
            android:layout_toRightOf="@+id/Button01"
            android:background="@color/ButtonColor2"
            android:text="@string/Eq"
            android:textColor="@color/ColorText2"
            android:textSize="@dimen/TextSize" />

        <Button
            android:id="@+id/Button05"
            android:layout_width="@dimen/ButtonSizeLand"
            android:layout_height="@dimen/ButtonSizeLand"
            android:layout_alignBaseline="@+id/buttonSum"
            android:layout_alignBottom="@+id/buttonSum"
            android:layout_margin="@dimen/ButtonMargin"
            android:layout_toRightOf="@+id/buttonSum"
            android:background="@color/ButtonColor2"
            android:text="@string/vazio"
            android:textColor="@color/ColorText2"
            android:textSize="@dimen/TextSize" />

    </RelativeLayout>

</LinearLayout>